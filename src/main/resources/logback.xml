<?xml version="1.0" encoding="UTF-8" ?>
<!--파일명은 logback이라고 설정해야지 스프링에서 해당 파일을 인지해서 적용함.-->
<configuration>
    <!--    콘솔 로그 설정-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--            %logger{36}은 클래스명을  최대 36자까지만 출력하겠다는 뜻. 로그보면 com.zaxxer.hikari.HikariDataSource 이런거 있음-->
            <!--            %msg%n은 로그메시지를 출력하고 마지막에 끝에서 줄바꿈을 한다는 뜻!-->
            <pattern>%d{yyyy-MM-DD HH:mm} %logger{36}-%msg%n</pattern>
        </encoder>
    </appender>
    <!--    일반 로그 파일 설정-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%d{yyyy-MM-DD HH:mm} %logger{36}-%msg%n</pattern>
        </encoder>
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
    </appender>

        에러 로그 파일 설정
        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <encoder>
                <pattern>%d{yyyy-MM-DD HH:mm} %logger{36}-%msg%n</pattern>
            </encoder>
<!--            필터를 걸어 에러로그만 걸러내겠다-->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>error</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
            <file>logs/app-error.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/app-error.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>10</maxHistory>
            </rollingPolicy>
        </appender>

    <!--    로그 레벨 관련 설정, .yml에 로그레벨을 설정하였지만 logback.xml파일을 만들면 yml의 로그관련설정이 무시되고 로그관련설정은 다 이 파일을따른다 -->
    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>

    </root>


</configuration>